{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/app/layout.css') }}" xmlns="http://www.w3.org/1999/html">

{% endblock %}
{% block body %}
    <h1>Posts list</h1>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Content</th>
                <th>Tags</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr class="text-center">
                    <td><a href="{{ path('post_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
                    <td>{{ post.name }}</td>
                    <td>{{ post.content }}</td>

                    <td>
                        {% for tag in post.tags %}
                            <a href="{{ path('post_index')}}?tag={{ tag }}">{{ tag }}</a>
                        {% endfor %}
                    </td>
                    <td>
                        <a href="{{ path('post_show', { 'id': post.id }) }}"><span class="glyphicon glyphicon-asterisk"></span></a>
                        <br/>
                        <a href="{{ path('post_edit', { 'id': post.id }) }}"><span class="glyphicon glyphicon-eye-open"></span></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="row">
        <div class="col-md-8"></div>
        <div class="col-md-4"><a href="{{ path('post_new') }}" class="btn btn-success pull-right">Create a new post</a></div>
    </div>


{% endblock %}
